<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.otherperspectiv.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".LogInActivity" />
        <activity android:name=".CreateOrJoinRestaurantActivity" />
        <activity android:name=".CreateRestaurantActivity" />
        <activity android:name=".JoinRestaurantActivity" />
        <activity
            android:name=".MainWaiterActivity"
            android:label="@string/title_activity_main_waiter" />
        <activity android:name=".WaiterMoreStatisticsActivity" />
        <activity android:name=".WaiterMoreEditProfileActivity" />
        <activity
            android:name=".MainManagerActivity"
            android:label="@string/title_activity_main_manager" />
        <activity android:name=".WaiterProcessOrderActivity" />
        <activity android:name=".ManagerAddItemActivity" />
        <activity android:name=".ManagerMoreStatisticsActivity" />
        <activity android:name=".ManagerMoreAddShiftActivity" />
        <activity android:name=".ManagerMoreRequest"/>

        <service
            android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>


        <service
            android:name=".FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>